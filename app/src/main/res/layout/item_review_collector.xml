<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        card_view:cardBackgroundColor="@color/sub_color"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/detail_activity_image_view_background" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/coverImageView"
                android:layout_toRightOf="@id/coverImageView"
                android:paddingRight="32dp"
                android:text="안 녕 하 십 니 까 저 는 안 드 로 이"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTextView"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/coverImageView"
                android:layout_toRightOf="@+id/coverImageView"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="감상평 : "
                android:textColor="@color/gray" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>